{{#if addNewCategory}}
  <h1>New Category</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="name">Name</label>
          {{input value=name id="name" class="form-control"}}
        </div>

        <button class="btn btn-success"{{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="btn btn-info"{{action 'categoryFormShow'}}>New Category</button>
{{/if}}
